algorithm Checkpoint_Algorithms_and_its_elements  
var   ch:string; 
B:string:='aeiouyw';
NC:integer:=0; 
NW:integer:=0;  
NV:integer:=0; 
i:integer:=0:  
j:integer:=0;  
BEGIN  
read(ch);  
While 
(ch[i] !=".")
{   
if(ch[i] !=" ")
{ NC+=1}    
else{NW +=1}
; 
for(j=0;j<8;j++)
{   
if(ch[i]=B[j])
{
NV+=1}  
}
; 
 i+=1; 
  }
  ;  
 write(NC,NW,NV); 
END
